{{#if body.items}}
  <section class="display">
    {{#each body.items}}
      <a class="card" href="/albums/{{id}}/tracks" style="--animation-order: {{@index}}">
        <div class="img-container" style="--animation-order: {{@index}}">
          <img src="{{images.0.url}}" alt="" />
        </div>
        <div class="text-container">
          <h5>
            {{name}}
          </h5>
        </div>
      </a>
    {{/each}}
  </section>
  {{> home_button}}
{{/if}}
